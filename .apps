echo "Homebrew"
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

echo "Node"
brew install node

echo "Mas"
brew install mas

echo "Yarn"
brew install yarn

echo "Jump"
brew install jump

echo "Xcode"
mas install 497799835

echo "Slack"
mas install 803453959

echo "Airmail"
